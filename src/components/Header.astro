---
import HeaderLink from "./HeaderLink.astro";
import { SITE_NAME } from "../consts";
import SocialLinks from "./SocialLinks.astro";
---

<header>
  <nav>
    <div class="logo">
      <a href="/">
        <img src="src/assets/icon.png" alt="Logo" />
      </a>
    </div>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <HeaderLink href="/projects">Projects</HeaderLink>
      <HeaderLink href="/games">Games</HeaderLink>
      <HeaderLink href="/music">Music</HeaderLink>
      <HeaderLink href="/contact">Contact me!</HeaderLink>
    </div>
    <button id="theme-toggle" aria-label="Toggle theme">üåô</button>

    <style>
      header {
        margin: 0;
        padding: 0 1em;
        background: var(--ctp-surface1);
        box-shadow: 0 2px 8px rgba(var(--ctp-surface2), 5%);
      }
      h2 {
        margin: 0;
        font-size: 1em;
      }

      h2 a,
      h2 a.active {
        text-decoration: none;
      }
      nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
      }
      nav a {
        padding: 1em 0.5em;
        color: var(--ctp-text);
        border-bottom: 4px solid transparent;
        text-decoration: none;
      }
      nav a.active {
        text-decoration: none;
        border-bottom-color: var(--accent-dark);
      }

      .logo a {
        display: flex;
        align-items: left;
      }
      .logo img {
        width: 64px;
        height: 100%;
        border-radius: 50%;
      }
    </style>
  </nav>
</header>
<script is:inline>
  const toggle = document.getElementById("theme-toggle");
  const isDark = document.documentElement.classList.contains("dark");
  toggle.textContent = isDark ? "‚òÄÔ∏è" : "üåô";

  toggle.addEventListener("click", () => {
    const dark = document.documentElement.classList.toggle("dark");
    localStorage.setItem("theme", dark ? "dark" : "light");
    toggle.textContent = dark ? "‚òÄÔ∏è" : "üåô";
  });
</script>
